<div class=container>
	<h1 class="my-title">Burger Madness</h1>

	<div class="row">

		<div class="col-sm-6">
			<h3>Burgers To Be Devoured</h3>

			<ul class="nobullet">
			{{#each burgers}}
				{{#unless devoured}}
					<li>
						<strong>{{burger_name}}</strong>

						<button class="devour-it btn-success btn-sm" data-id="{{id}}">
								DEVOUR IT!
						</button>

						<button class="duplicate btn-primary btn-sm" data-name="{{burger_name}}">
								Add 1 more
						</button>
					</li>

				{{/unless}}
			{{/each}}
			</ul>
		</div>

		<div class="col-sm-6">

		<h3>Too Late !!! Already have been devoured</h3>

		<ul class="nobullet">
			{{#each burgers}}
				{{#if devoured}}
					<li>
						<strong>{{burger_name}}</strong>
						<button class="delete-it btn-warning btn-sm" data-id="{{id}}">
								Delete
						</button>
					</li>
				{{/if}}
			{{/each}}
		</ul>
		</div>
	</div>

	<h2>Add a Burger</h2>
	<form class="create-form">
		<div class="form-group">
			<label for="b_name"><strong>Give Your Burger a Name:</strong></label>
			<input type="text" id="b_name" name="burger_name">
		</div>
		<button type="submit">Add It!</button>
	</form>

</div>
